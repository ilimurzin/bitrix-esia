{
    "name": "ilimurzin/bitrix-esia",
    "description": "Модуль для Битрикса. Добавляет «Госуслуги» в «социальные сервисы».",
    "type": "bitrix-d7-module",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "composer/installers": "^2.0",
        "psr/log": "^3.0",
        "psr/http-message": "^2.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "rector/rector": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.63"
    },
    "scripts": {
        "cs-check": "php-cs-fixer check",
        "cs-fix": "php-cs-fixer fix",
        "rector-check": "rector --dry-run",
        "rector-fix": "rector"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "installer-name": "esia"
    }
}
